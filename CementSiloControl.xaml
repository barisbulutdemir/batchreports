<UserControl x:Class="takip.CementSiloControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="160" Height="300">
    <Grid>
        <!-- Arka plan -->
        <Canvas>
            <!-- Silo gÃ¶vdesi -->
            <Path x:Name="SiloShape" Stroke="Gray" StrokeThickness="2"
                  Fill="LightGray" Data="M30,50 A40,15 0 0 1 110,50 L110,200 A40,15 0 0 1 30,200 Z"/>
            <!-- Alt koni (chute) -->
            <Path Stroke="Gray" StrokeThickness="2" Fill="#C0C0C0"
                  Data="M50,200 L110,200 L92,240 L68,240 Z"/>
            <!-- Doluluk maske -->
            <Rectangle x:Name="LevelRect" Canvas.Left="34" Canvas.Top="50" Width="72" Height="150" Fill="Transparent"/>
            <Rectangle x:Name="LevelFill" Canvas.Left="34" Width="72" Fill="#78AADD" />
            <!-- Merdiven -->
            <Path Stroke="Gray" StrokeThickness="2" Data="M120,60 L120,190"/>
            <Line X1="114" Y1="70" X2="126" Y2="70" Stroke="Gray" StrokeThickness="1"/>
            <Line X1="114" Y1="90" X2="126" Y2="90" Stroke="Gray" StrokeThickness="1"/>
            <Line X1="114" Y1="110" X2="126" Y2="110" Stroke="Gray" StrokeThickness="1"/>
            <Line X1="114" Y1="130" X2="126" Y2="130" Stroke="Gray" StrokeThickness="1"/>
            <Line X1="114" Y1="150" X2="126" Y2="150" Stroke="Gray" StrokeThickness="1"/>
            <!-- Etiket -->
            <TextBlock x:Name="Label" Text="SILO" FontWeight="Bold" Canvas.Left="60" Canvas.Top="18"/>
            <TextBlock x:Name="PercentLabel" Text="50 %" Canvas.Left="60" Canvas.Top="210"/>
        </Canvas>
    </Grid>
</UserControl>


