<Window x:Class="takip.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reports" Height="650" Width="1000" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="StartDate"/>
                <DatePicker x:Name="EndDate" Margin="8,0,0,0"/>
                <ComboBox x:Name="PresetCombo" Width="140" Margin="8,0,0,0" SelectedIndex="0">
                    <ComboBoxItem Content="Today"/>
                    <ComboBoxItem Content="Last 1 Day"/>
                    <ComboBoxItem Content="Last 1 Week"/>
                    <ComboBoxItem Content="Last 1 Month"/>
                </ComboBox>
                <Button x:Name="FetchM1Button" Content="Get Mixer1" Width="120" Margin="8,0,0,0"/>
                <Button x:Name="FetchM2Button" Content="Get Mixer2" Width="120" Margin="8,0,0,0"/>
                <Button x:Name="ExportReportButton" Content="Report" Width="80" Margin="8,0,0,0"/>
                <Button x:Name="PurgeButton" Content="Delete Data" Width="110" Margin="8,0,0,0"/>
            </StackPanel>
        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="Summary">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8">
                        <GroupBox Header="General">
                            <DataGrid x:Name="SummaryGeneralGrid" AutoGenerateColumns="False" IsReadOnly="True" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Information" Binding="{Binding Bilgi}" Width="200"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Deger}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Header="Cement" Margin="0,8,0,0">
                            <DataGrid x:Name="CementSummaryGrid" AutoGenerateColumns="False" IsReadOnly="True" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Ad}" Width="*"/>
                                    <DataGridTextColumn Header="Total (kg)" Binding="{Binding ToplamKg}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Header="Aggregate" Margin="0,8,0,0">
                            <DataGrid x:Name="AggregateSummaryGrid" AutoGenerateColumns="False" IsReadOnly="True" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Ad}" Width="*"/>
                                    <DataGridTextColumn Header="Total (kg)" Binding="{Binding ToplamKg}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Header="Admixture" Margin="0,8,0,0">
                            <DataGrid x:Name="AdmixtureSummaryGrid" AutoGenerateColumns="False" IsReadOnly="True" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Ad}" Width="*"/>
                                    <DataGridTextColumn Header="Chemical (kg)" Binding="{Binding KimyasalKg}" Width="150"/>
                                    <DataGridTextColumn Header="Water (kg)" Binding="{Binding SuKg}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Header="Pigment" Margin="0,8,0,0">
                            <DataGrid x:Name="PigmentSummaryGrid" AutoGenerateColumns="False" IsReadOnly="True" PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Ad}" Width="*"/>
                                    <DataGridTextColumn Header="Total (kg)" Binding="{Binding ToplamKg}" Width="150"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <TextBlock x:Name="StatusText" Grid.Row="2"/>
    </Grid>
</Window>



