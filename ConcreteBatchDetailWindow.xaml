<Window x:Class="takip.ConcreteBatchDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Details" Height="520" Width="780" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText" FontSize="16" FontWeight="Bold"/>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cement (small area) -->
            <GroupBox Header="Cement" Grid.Row="0" Grid.Column="0" Margin="0,0,8,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="CementGrid" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="110">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Kg" Binding="{Binding WeightKg, StringFormat={}{0:0}}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock x:Name="CementPercentText" Grid.Row="1" Margin="4,6,4,0" Foreground="#555"/>
                </Grid>
            </GroupBox>

            <!-- Water Information (next to cement) -->
            <GroupBox Header="Water Information" Grid.Row="0" Grid.Column="1" Margin="8,0,0,8">
                <DataGrid x:Name="WaterInfoGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="140">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Info" Binding="{Binding Info}" Width="*"/>
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Aggregates -->
            <GroupBox Header="Aggregates" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8">
                <DataGrid x:Name="AggGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="220">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Slot}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Kg" Binding="{Binding WeightKg, StringFormat={}{0:0}}" Width="100"/>
                        <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Admixtures -->
            <GroupBox Header="Admixtures" Grid.Row="1" Grid.Column="1" Margin="8,0,0,8">
                <DataGrid x:Name="AdmGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="220">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Slot}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="120"/>
                        <DataGridTextColumn Header="Chemical (kg)" Binding="{Binding ChemicalKg, StringFormat={}{0:0.0}}" Width="120"/>
                        <DataGridTextColumn Header="Water (kg)" Binding="{Binding WaterKg, StringFormat={}{0:0.0}}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Pigment -->
            <GroupBox Header="Pigment" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,0">
                <DataGrid x:Name="PigmentGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Height="120">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Kg" Binding="{Binding WeightKg, StringFormat={}{0:0.0}}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>



