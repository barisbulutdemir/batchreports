<Window x:Class="takip.BatchTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Takip (Mixer2)" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0" Text="Mixer2 Batch Takip Sistemi" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Kontrol Butonları -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Content="Yenile" Click="RefreshButton_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button x:Name="ShowActiveButton" Content="Aktif Batch'ler" Click="ShowActiveButton_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button x:Name="ShowAllButton" Content="Tüm Batch'ler" Click="ShowAllButton_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button x:Name="ShowCompletedButton" Content="Tamamlanan" Click="ShowCompletedButton_Click" Margin="0,0,10,0" Padding="10,5"/>
            <Button x:Name="DeleteSelectedButton" Content="Seçili Batch'i Sil" Click="DeleteSelectedButton_Click" Margin="0,0,10,0" Padding="10,5" Background="LightCoral" Foreground="White"/>
            <TextBlock x:Name="StatusText" Text="Hazır" FontSize="12" Foreground="Blue" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Batch Listesi -->
        <DataGrid Grid.Row="2" x:Name="BatchDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False" 
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  SelectionMode="Single" SelectionChanged="BatchDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Batch ID" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="Oluşturma Tarihi" Binding="{Binding OccurredAtLocal}" Width="100"/>
                <DataGridTextColumn Header="Durum" Binding="{Binding Status}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Blue"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="yatay_kovada">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="dikey_kovada">
                                    <Setter Property="Foreground" Value="Purple"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="bekleme_bunkerinde">
                                    <Setter Property="Foreground" Value="Brown"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="mixerde">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="tamamlandi">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Operatör" Binding="{Binding OperatorName}" Width="100"/>
                <DataGridTextColumn Header="Reçete" Binding="{Binding RecipeCode}" Width="100"/>
                <DataGridTextColumn Header="Toplam Agrega" Binding="{Binding TotalAggregateKg, StringFormat=F1}" Width="120"/>
                <DataGridTextColumn Header="Toplam Çimento" Binding="{Binding TotalCementKg, StringFormat=F1}" Width="120"/>
                <DataGridTextColumn Header="Loadcell Su" Binding="{Binding LoadcellWaterKg, StringFormat=F1}" Width="100"/>
                <DataGridTextColumn Header="Pulse Su" Binding="{Binding PulseWaterKg, StringFormat=F1}" Width="100"/>
                <DataGridTextColumn Header="Toplam Su" Binding="{Binding TotalWaterKg, StringFormat=F1}" Width="100"/>
                <DataGridTextColumn Header="Toplam Katkı" Binding="{Binding TotalAdmixtureKg, StringFormat=F1}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Alt Panel - Seçili Batch Detayları -->
        <GroupBox Grid.Row="3" Header="Seçili Batch Detayları" Margin="0,10,0,0">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Agregalar -->
                    <GroupBox Grid.Column="0" Header="Agregalar" Margin="0,0,5,0">
                        <DataGrid x:Name="AggregateDataGrid" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  MaxHeight="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="50"/>
                                <DataGridTextColumn Header="Ad" Binding="{Binding Name}" Width="100"/>
                                <DataGridTextColumn Header="Miktar" Binding="{Binding WeightKg, StringFormat=F1}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Çimentolar -->
                    <GroupBox Grid.Column="1" Header="Çimentolar" Margin="5,0">
                        <DataGrid x:Name="CementDataGrid" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  MaxHeight="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="50"/>
                                <DataGridTextColumn Header="Tip" Binding="{Binding CementType}" Width="100"/>
                                <DataGridTextColumn Header="Miktar" Binding="{Binding WeightKg, StringFormat=F1}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Katkılar -->
                    <GroupBox Grid.Column="2" Header="Katkılar" Margin="5,0,0,0">
                        <DataGrid x:Name="AdmixtureDataGrid" AutoGenerateColumns="False" 
                                  CanUserAddRows="False" CanUserDeleteRows="False" 
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                  MaxHeight="150">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Slot" Binding="{Binding Slot}" Width="50"/>
                                <DataGridTextColumn Header="Tip" Binding="{Binding AdmixtureType}" Width="100"/>
                                <DataGridTextColumn Header="Kimyasal" Binding="{Binding ChemicalWeightKg, StringFormat=F1}" Width="80"/>
                                <DataGridTextColumn Header="Su" Binding="{Binding WaterWeightKg, StringFormat=F1}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
                
                <!-- Su Detayları -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Su Detayları" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Loadcell Su:" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="0" x:Name="LoadcellWaterDetail" Text="0 kg" Margin="80,0,0,0"/>
                        
                        <TextBlock Grid.Column="1" Text="Pulse Su:" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="PulseWaterDetail" Text="0 kg" Margin="80,0,0,0"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
