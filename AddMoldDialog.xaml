<Window x:Class="takip.AddMoldDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="AddMoldDialogWindow" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Kalıp Adı -->
        <Label Grid.Row="0" x:Name="MoldNameLabel" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="MoldNameTextBox" Height="25" Margin="0,0,0,10" VerticalAlignment="Center"/>
        
        <!-- Kalıp Kodu -->
        <Label Grid.Row="2" x:Name="MoldCodeLabel" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="MoldCodeTextBox" Height="25" Margin="0,0,0,15" VerticalAlignment="Center"/>
        
        <!-- Butonlar -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
            <Button Name="SaveButton" Width="100" Height="35" 
                    Background="Green" Foreground="White" Margin="0,0,15,0"
                    FontSize="14" FontWeight="Bold"
                    Click="SaveButton_Click"/>
            <Button Name="CancelButton" Width="100" Height="35" 
                    Background="Gray" Foreground="White"
                    FontSize="14" FontWeight="Bold"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
