<Window x:Class="takip.SiloRefillDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Silo Refill" Height="400" Width="400" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Çimento Silo Doldurma" FontSize="16" FontWeight="Bold" Margin="0,0,0,16"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Silo Bilgisi -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Silo:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBlock x:Name="SiloInfoText" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" 
                      FontWeight="Bold" FontSize="14"/>

            <!-- Mevcut Miktar -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mevcut Miktar:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBlock x:Name="CurrentAmountText" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Kapasite -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Kapasite:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBlock x:Name="CapacityText" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Eklenen Miktar -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Eklenen Miktar (kg):" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox x:Name="RefillAmountText" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Operatör Adı -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Operatör Adı:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox x:Name="OperatorNameText" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Sevkiyat Numarası -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Sevkiyat No:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox x:Name="ShipmentNumberText" Grid.Row="5" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Tedarikçi -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Tedarikçi:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBox x:Name="SupplierText" Grid.Row="6" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Notlar -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Notlar:" VerticalAlignment="Top" Margin="0,0,8,8"/>
            <TextBox x:Name="NotesText" Grid.Row="7" Grid.Column="1" Margin="0,0,0,8" 
                    Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Yeni Miktar -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Yeni Miktar:" VerticalAlignment="Center" Margin="0,0,8,8"/>
            <TextBlock x:Name="NewAmountText" Grid.Row="8" Grid.Column="1" Margin="0,0,0,8" 
                      FontWeight="Bold" FontSize="14" Foreground="Green"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="OkButton" Content="✅ Onayla" Width="100" Margin="0,0,8,0" 
                   Background="#4CAF50" Foreground="White" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="❌ İptal" Width="100" 
                   Background="#F44336" Foreground="White" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>






