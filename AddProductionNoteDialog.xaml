<Window x:Class="takip.AddProductionNoteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Production Note" Height="250" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Başlık -->
        <TextBlock Grid.Row="0" Text="Add Production Note" FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Not Metni -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Note:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="NoteTextBox" Height="100" TextWrapping="Wrap" 
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                     Padding="5" FontSize="12"/>
        </StackPanel>
        
        
        <!-- Butonlar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>
            <Button Content="Save" Width="80" Height="30" 
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
